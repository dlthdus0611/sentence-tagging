{
  "data": {
    "dataset": "tagging_dataset",
    "data_dir": "../data/",
    "train_file": "train_1011.csv",
    "test_file": "test_1011.csv",
    "label_desc_file": "label_desc.csv",
    "prob_json": "hierar/hierar_prob.json",
    "prob_child_to_parent_json": "hierar/hierar.json",
    "hierarchy": "hierar/hierar.txt",
    "total_sample_num": 6,
    "sample_num": 2,
    "positive_num": 1,
    "negative_ratio": 3,
    "layer_num": 2
  },
  "embedding": {
    "token": {
      "dimension": 300,
      "type": "pretrain",
      "pretrained_file": "glove.6B.300d.txt",
      "dropout": 0.5,
      "init_type": "uniform"
    },
    "label": {
      "dimension": 768,
      "type": "random",
      "dropout": 0.5,
      "init_type": "kaiming_uniform"
    }
  },
  "text_encoder": {
    "max_length": 300,
    "RNN": {
      "bidirectional": true,
      "num_layers": 1,
      "type": "GRU",
      "hidden_dimension": 100,
      "dropout": 0.1
    },
    "CNN": {
      "kernel_size": [2, 3, 4],
      "num_kernel": 100
    },
    "topK_max_pooling": 1
  },
  "structure_encoder": {
    "type": "GCN",
    "node": {
      "type": "text",
      "dimension": 300,
      "dropout": 0.05
    }
  },
  "matching_net": {
    "dimension": 200,
    "dropout": 0.1,
    "output_relu": 0,
    "output_dropout": 0,
    "l2_norm": 1
  },
  "model": {
    "model_dir": "pretrained_model/",
    "type": "HiMatch-bert",
    "linear_transformation": {
      "text_dimension": 768,
      "node_dimension": 300,
      "dropout": 0.1
    },
    "classifier": {
      "num_layer": 1,
      "output_drop": 0,
      "dropout": 0.5
    }
  },
  "train": {
    "optimizer": {
      "type": "Adam"
    },
    "seed": 42,
    "batch_size": 16,
    "refresh_data_loader": 1,
    "early_stopping": 20,
    "loss": {
      "classification": "BCEWithLogitsLoss",
      "recursive_regularization": {
        "flag": false,
        "penalty": 0.000001
      }
    }
  }
}